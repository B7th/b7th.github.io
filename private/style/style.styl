$primary = #0db4ff
$secondary = #360030
@import 'nib'
@import '_reset'
reset()
defaults()

@font-face
  font-family "Frederika"
  src local("Frederika the Great"), url("Frederika.ttf") format("opentype") 
@font-face
  font-family "Amita"
  src local("Amita"), url("Amita-Bold.ttf") format("opentype") 
@font-face
  font-family "Estonia"
  src local("Estonia"), url("Estonia-Regular.ttf") format("opentype") 

html
  min-height -webkit-fill-available

body
  box-sizing border-box
  font-family Amita, serif
  background #2e0033 url('BookCover.png') center center repeat

header, footer
  font-family Frederika,"Academy Engraved LED", serif
  position relative

header
  height 100vh

footer p, p.top
  font-size 10pt
  font-weight bold
  text-align center
  color #FFD700
  a
    color inherit
footer p
  padding 4em

a
  color lighten($secondary,20%)
  &:hover
    color lighten($secondary,40%)
  &:active
    color lighten($secondary,80%)
  &:visited
    color lighten($secondary,0%)

@keyframes spark
  from
    opacity 0
    font-size 1.95em
  to
    opacity 1
    font-size 2em

header h1
  animation-name spark
  animation-duration 2s

header h1, header h2, header h3
  font-size 2em
  font-weight bold
  text-align center
  text-shadow: -1.5px -2px rgba(1,1,1,.25), 1.5px 1.5px rgba(255,255,255,.25);
  color #FFD700
  padding 0
  width 100vw
  position absolute
  top 50%
  -ms-transform translateY(-50%)
  transform translateY(-50%)
  @media print
    position relative
    min-height auto
    color black
  
  em
    display block
    font-size 200%
    background-image linear-gradient(to bottom,#FFD700,#FFD700,darken(#FFD700, 50%))
    color transparent
    -webkit-background-clip text
    @media (max-width: 70em)
      font-size 180%
    @media print
      color black

hr
  column-break-before always
  -webkit-column-break-before always
nav, article, aside
  margin 20pt 10pt
  padding 10pt
  min-height 70vh
  box-sizing border-box
  background #faf8ea url("Page.png") center center repeat
  @media print
    min-height auto
nav
  h2
    text-align center
  strong, em, .day
    display block
    text-align center
  strong
    font-size 180%
    margin 1em
  em
    font-size 170%
    font-weight bold
    margin .9em
  .day
    font-size 120%
    margin .8em
article, aside, nav
  @media (min-width: 70em)
    padding 30pt
    column-fill balance
    column-count 2
    orphans 2
    widows 2
    column-rule 1px solid rgba(0,0,0,.125)

h1, h2, h3
  font-weight bold
  font-family Frederika,"Academy Engraved LED", serif
  padding 25pt 12.5pt
  text-shadow: -1px -1.5px rgba(1,1,1,.25), 1px 1px rgba(255,255,255,.25);
  color $secondary
  background-image linear-gradient(to bottom,lighten($secondary, 40%),lighten($secondary, 5%),darken($secondary, 50%))
  color transparent
  -webkit-background-clip text
  -background-clip text
  @media print
    color black
h1, h2
  font-size 3em
h3, h4
  font-size 2em
  padding-left 25pt
  padding-top 1em
  padding-bottom 1em
h5
  font-family Amita, serif
  font-size 1.5em
  padding-left 37.5pt

article p, aside p
  font-size 20pt
  line-height 25pt
  padding 0 37.5pt 25pt
  color darken($secondary, 10%)
  &:has(img)
    clear both
  &:nth-child(even) img
    float right
    padding 0 0 1em 1em

article img
  float left
  clear auto
  width 8em
  padding 0 1em 1em 0

p:last-child em
  padding .5em 1em
  font-size 2.5em
  font-weight normal
article em, aside em
  font-family Estonia, serif
  font-style italic
  font-weight bold
  font-size 1.8em

strong
  font-weight bold
  color $secondary